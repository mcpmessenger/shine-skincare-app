packages:
  yum:
    git: []
    gcc: []
    gcc-c++: []
    make: []
    openssl-devel: []
    libffi-devel: []

commands:
  01_upgrade_pip:
    command: "/var/app/venv/*/bin/pip install --upgrade pip"
  02_install_requirements:
    command: "/var/app/venv/*/bin/pip install -r requirements.txt"
    cwd: "/var/app/current"

