# Environment Variables Template for Vercel Deployment
# Copy this file to .env.local for local development
# Set these variables in Vercel dashboard for production

# Google Cloud Vision API Credentials
# Paste the entire JSON content from shine-466907-09b8909d49ec.json as one line
GOOGLE_CREDENTIALS_JSON={"type":"service_account","project_id":"shine-466907",...}

# OR use file path for local development (not recommended for Vercel)
# GOOGLE_APPLICATION_CREDENTIALS=./shine-466907-09b8909d49ec.json

# Supabase Database (Optional - app works without this)
SUPABASE_URL
SUPABASE_KEY

# Flask Configuration
SECRET_KEY=your-secret-key-for-sessions
LOG_LEVEL=INFO

# Service Configuration (Optional - has defaults)
USE_MOCK_SERVICES=false
USE_PRODUCTION_FAISS=true
FAISS_DIMENSION=128
DEMOGRAPHIC_WEIGHT=0.3
ETHNICITY_WEIGHT=0.6
SKIN_TYPE_WEIGHT=0.3
AGE_GROUP_WEIGHT=0.1

# Performance Settings
PRELOAD_FAISS=false
OMP_NUM_THREADS=2
OPENBLAS_NUM_THREADS=2