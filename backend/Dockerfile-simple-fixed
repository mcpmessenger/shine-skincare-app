# Use official Python runtime
FROM python:3.11-slim

# Set working directory
WORKDIR /app

# Install system dependencies including curl for health checks
RUN apt-get update && apt-get install -y curl && rm -rf /var/lib/apt/lists/*

# Install minimal Python dependencies
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir flask==2.3.3 flask-cors==4.0.0

# Copy only the simple health app
COPY simple_health_app.py .

# Expose port 5000 explicitly
EXPOSE 5000

# Set environment variables
ENV FLASK_APP=simple_health_app.py
ENV FLASK_ENV=production
ENV PYTHONUNBUFFERED=1

# Health check with explicit port
HEALTHCHECK --interval=30s --timeout=10s --start-period=30s --retries=3 \
    CMD curl -f http://localhost:5000/health || exit 1

# Run the simple app with explicit host binding
CMD ["python", "-u", "simple_health_app.py"]
