{
  "family": "shine-ml-service",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "2048",
  "memory": "6144",
  "executionRoleArn": "arn:aws:iam::396608803476:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::396608803476:role/shine-ml-service-task-role",
  "containerDefinitions": [
    {
      "name": "ml-service",
      "image": "396608803476.dkr.ecr.us-east-1.amazonaws.com/shine-ml-service:latest",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 5000,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "MODEL_PATH",
          "value": "/app/models/fixed_model_best.h5"
        },
        {
          "name": "FLASK_ENV",
          "value": "production"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/shine-ml-service",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "curl -f http://localhost:5000/health || exit 1"
        ],
        "interval": 60,
        "timeout": 30,
        "retries": 3,
        "startPeriod": 120
      },
      "ulimits": [
        {
          "name": "nofile",
          "softLimit": 65536,
          "hardLimit": 65536
        }
      ]
    }
  ],
  "tags": [
    {
      "key": "Service",
      "value": "shine-ml-service"
    },
    {
      "key": "Environment",
      "value": "production"
    },
    {
      "key": "Architecture",
      "value": "microservices"
    }
  ]
}
