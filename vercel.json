{
  "version": 2,
  "builds": [
    {
      "src": "backend/run_vercel.py",
      "use": "@vercel/python",
      "config": {
        "requirements": "backend/requirements-vercel.txt"
      }
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": ".next"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/run_vercel.py"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "env": {
    "FLASK_ENV": "production"
  }
} 